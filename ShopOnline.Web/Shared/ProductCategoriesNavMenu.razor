@inherits ProductCategoriesNavMenuBase

@if (ProductCategories == null && ErrorMessage == null)
{
    <DisplaySpinner/>
}
else if (ErrorMessage != null)
{
    <DisplayError Message="@ErrorMessage"/>
}
else
{
    @foreach (var cat in ProductCategories)
    {
        var link = $"products/{cat.Id}";

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@link">
                <span aria-hidden="true"><img src="@cat.Icon" width="20" height="20"/></span>&nbsp; @cat.Name
            </NavLink>
        </div>
    }
}
